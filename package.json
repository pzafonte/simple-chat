{
  "name": "simple-chat",
  "version": "1.0.0",
  "description": "simple chat app",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev && webpack-dev-server --inline --progress --port 80 --hot --host 0.0.0.0 **--public arcane-earth-21791.herokuapp.com**",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && yarn install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pzafonte/simple-chat.git"
  },
  "author": "Peter Zafonte",
  "license": "MIT License",
  "bugs": {
    "url": "https://github.com/pzafonte/simple-chat/issues"
  },
  "homepage": "https://github.com/pzafonte/simple-chat#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^4.0.1",
    "express": "^4.16.4",
    "mongoose": "^5.3.11",
    "socket.io": "^2.1.1"
  },
  "devDependencies": {
    "nodemon": "^1.18.6"
  }
}
